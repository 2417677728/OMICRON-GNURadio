<?xml version="1.0"?>
<block>
  <name>WiFi MAC / Parse MAC</name>
  <key>adaptiveOFDM_mac_and_parse</key>
  <category>[Time Adaptive OFDM]</category>
  <import>import adaptiveOFDM</import>
  <make>adaptiveOFDM.mac_and_parse($src_mac, $dst_mac, $bss_mac, $debug, $tx_packets_f,
                                    $rx_packets_f)</make>

  <param>
    <name>SRC MAC</name>
    <key>src_mac</key>
    <value>[0x23, 0x23, 0x23, 0x23, 0x23, 0x23]</value>
    <type>int_vector</type>
  </param>

  <param>
    <name>DST MAC</name>
    <key>dst_mac</key>
    <value>[0x42, 0x42, 0x42, 0x42, 0x42, 0x42]</value>
    <type>int_vector</type>
  </param>

  <param>
    <name>BSS MAC</name>
    <key>bss_mac</key>
    <value>[0xff, 0xff, 0xff, 0xff, 0xff, 0xff]</value>
    <type>int_vector</type>
  </param>

  <param>
    <name>Debug</name>
    <key>debug</key>
    <value>False</value>
    <type>bool</type>
    <option>
      <name>Enable</name>
      <key>True</key>
    </option>
    <option>
      <name>Disable</name>
      <key>False</key>
    </option>
  </param>

  <param>
    <name># Tx Packets File</name>
    <key>tx_packets_f</key>
    <value>/tmp/tx_packets.csv</value>
    <type>string</type>
  </param>

  <param>
    <name># Rx Packets File</name>
    <key>rx_packets_f</key>
    <value>/tmp/rx_packets.csv</value>
    <type>string</type>
  </param>

  <check>len($src_mac) == 6</check>
  <check>len($dst_mac) == 6</check>
  <check>len($bss_mac) == 6</check>
  <check>all([x >= 0 and 255 >= x for x in $src_mac])</check>
  <check>all([x >= 0 and 255 >= x for x in $dst_mac])</check>
  <check>all([x >= 0 and 255 >= x for x in $bss_mac])</check>

  <sink>
    <name>app in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>phy in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <source>
    <name>app out</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>fer</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>frame data</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>phy out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
