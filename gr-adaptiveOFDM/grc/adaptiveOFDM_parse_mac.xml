<?xml version="1.0"?>
<block>
  <name>WiFi Parse MAC (return Data)</name>
  <key>adaptiveOFDM_parse_mac</key>
  <category>[adaptiveOFDM]</category>
  <import>import adaptiveOFDM</import>
  <make>adaptiveOFDM.parse_mac($mac, $encoding, $log, $debug)</make>
  <callback>set_encoding($encoding)</callback>
  
  <param>
    <name>MAC</name>
    <key>mac</key>
    <value>[0x23, 0x23, 0x23, 0x23, 0x23, 0x23]</value>
    <type>int_vector</type>
  </param>

  <param>
    <name>encoding</name>
    <key>encoding</key>
    <value>adaptiveOFDM.BPSK_1_2</value>
    <type>raw</type>
  </param>

  <param>
    <name>Log</name>
    <key>log</key>
    <value>False</value>
    <type>bool</type>

    <option>
      <name>Enable</name>
      <key>True</key>
    </option>
    <option>
      <name>Disable</name>
      <key>False</key>
    </option>
  </param>

  <param>
    <name>Debug</name>
    <key>debug</key>
    <value>False</value>
    <type>bool</type>

    <option>
      <name>Enable</name>
      <key>True</key>
    </option>
    <option>
      <name>Disable</name>
      <key>False</key>
    </option>
  </param>

  <check>len($mac) == 6</check>
  <check>all([x >= 0 and 255 >= x for x in $mac])</check>

  <sink>
    <name>in</name>
    <type>message</type>
  </sink>

  <source>
    <name>fer</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>data</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
